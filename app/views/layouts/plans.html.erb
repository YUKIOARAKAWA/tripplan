                <li><%= link_to "ログイン", new_user_session_path %></li>

              <% end %>

      			</ul>
      		</div>
      	</div>
      </nav>
    </header>

    <% if notice.present? %>
      <div class = "alert alert-success">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class = "alert alert-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

<%= yield %>

